<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
         <record id="tsc_unlock_sale_orders_group" model="res.groups">
            <field name="name">Unlock sale orders</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="comment">The user will be able to unlock confirmed sales orders.</field>
        </record>  

         <record id="tsc_cancel_sale_orders_group" model="res.groups">
            <field name="name">Cancel sale orders</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="comment">The user will be able to cancel sales orders.</field>
        </record>  

         <record id="tsc_unlock_purchase_orders_group" model="res.groups">
            <field name="name">Unlock purchase orders</field>
            <field name="category_id" ref="base.module_category_inventory_purchase"/>
            <field name="comment">The user will be able to unlock confirmed purchase orders.</field>
        </record>    

         <record id="tsc_return_customer_invoices_to_draft_group" model="res.groups">
            <field name="name">Return customer invoices to draft</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="comment">The user will be able to return customer invoices to draft.</field>
        </record> 

         <record id="tsc_return_supplier_invoices_to_draft_group" model="res.groups">
            <field name="name">Return supplier invoices to draft</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="comment">The user will be able to return supplier invoices to draft.</field>
        </record>     

         <record id="tsc_cancel_customer_invoices_group" model="res.groups">
            <field name="name">Cancel customer invoices</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="comment">The user may cancel customer invoices without confirmed dispatch.</field>
        </record>  

    </data>
</odoo>