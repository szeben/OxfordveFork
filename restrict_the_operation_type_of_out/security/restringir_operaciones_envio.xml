            <field name="domain_force">[('code', '=', 'outgoing'), ('sequence_code', '=', 'OUT')]</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="groups" eval="[Command.link(ref('group_restringir_operaciones_de_envio'))]"/>
        </record>
    </data>
</odoo>