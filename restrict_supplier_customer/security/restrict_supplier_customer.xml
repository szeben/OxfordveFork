<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Grupos -->
        <record model="ir.module.category" id="module_category_contact">
            <field name="name">Contacto</field>
            <field name="description">Restricciones para el módulo de contactos. Creado por: Techne.</field>
            <field name="sequence">50</field>
        </record>
        <record id="group_management_supplier" model="res.groups">
            <field name="name">Gestionar proveedores</field>
            <field name="category_id" ref="module_category_contact"/>
            <field name="comment">Los usuarios pertenecientes a este grupo, son los únicos que pueden gestionar los contactos de tipo proveedor. Creado por: Techne.</field>
        </record>
        <record id="group_show_supplier" model="res.groups">
            <field name="name">Visualizar proveedores</field>
            <field name="category_id" ref="module_category_contact"/>
            <field name="comment">Los usuarios pertenecientes a este grupo, son los únicos que pueden visualizar los contactos de tipo proveedor. Creado por: Techne.</field>
        </record>
        <record id="group_show_not_national_supplier" model="res.groups">
            <field name="name">Visualizar proveedores, excluye los nacionales</field>
            <field name="category_id" ref="module_category_contact"/>
            <field name="comment">Los usuarios pertenecientes a este grupo, son los únicos que pueden visualizar los contactos de tipo proveedor, excluyendo los proveedores nacionales. Creado por: Techne.</field>
        </record>
        <record id="group_show_customer" model="res.groups">
            <field name="name">Visualizar clientes</field>
            <field name="category_id" ref="module_category_contact"/>
            <field name="comment">Los usuarios pertenecientes a este grupo, son los únicos que pueden visualizar los contactos de tipo cliente. Creado por: Techne.</field>
        </record>

        <!-- Reglas de registro -->        
        <record id="rule_management_supplier" model="ir.rule">
            <field name="name">Gestionar proveedores</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="groups" eval="[(4, ref('restrict_supplier_customer.group_management_supplier'))]"/>
            <field name="domain_force">[('supplier_rank', '>=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
        <record id="rule_show_supplier" model="ir.rule">
            <field name="name">Visualizar proveedores</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="groups" eval="[(4, ref('restrict_supplier_customer.group_show_supplier'))]"/>
            <field name="domain_force">[('supplier_rank', '>', 0)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        <record id="rule_show_not_national_supplier" model="ir.rule">
            <field name="name">Visualizar proveedores, excluye los nacionales</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="groups" eval="[(4, ref('restrict_supplier_customer.group_show_not_national_supplier'))]"/>
            <field name="domain_force">[('supplier_rank', '>', 0),('is_national', '=', False)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>       
        <record id="rule_show_customer" model="ir.rule">
            <field name="name">Visualizar clientes</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="groups" eval="[(4, ref('restrict_supplier_customer.group_show_customer'))]"/>
            <field name="domain_force">[('customer_rank', '>', 0)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
     
    </data>
</odoo>